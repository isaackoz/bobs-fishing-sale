---
// https://docs.astro.build/en/guides/view-transitions/
import { ViewTransitions } from 'astro:transitions';
import "@/styles/globals.css"
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <!-- Google fonts -->
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-gray-200">
    <div class='my-0 mx-auto'>
      <header class="flex h-32 sticky top-0 bg-slate-800 items-center justify-center z-50">
        <a
          class="font-extrabold text-5xl text-yellow-400"
          href="/"
          >Bob&apos;s Fishing Sale</a
        >
      </header>
      <main class="min-h-[calc(100dvh-128px-48px)]">
        <slot />
      </main>
      <footer class="h-12">
        <p class="text-center">
          github.com/isaackoz
        </p>
      </footer>
    </div>
  </body>
</html>